# Systemd'yi destekleyen bir temel görüntü kullanın, örneğin Ubuntu 
ubuntu'dan:20.04 

# Gerekli paketleri kurun 
apt-get update && \ 
apt-get install -y Shellinabox && \ 
apt-get install -y systemd && \ 
apt-get clean ÇALIŞTIRIN && \ 
rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* 
RUN echo 'root:root' | chpasswd 
# Web tabanlı terminal bağlantı noktasını açığa çıkarın 
EXPOSE 4200 

# Shellinabox 
CMD'yi başlatın ["/usr/bin/shellinaboxd", "-t", "-s", "/:LOGIN"]Kopyala
